<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tela_de_pedidos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tela_de_pedidos.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Orders" asp-action="Index">Tela_de_pedidos</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item border-end ps-3 pe-3">
                            <a class="nav-link text-dark" asp-controller="Orders" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item border-end ps-3 pe-3">
                            <a class="nav-link text-dark" asp-controller="Orders" asp-action="AddClient">Cadastrar cliente</a>
                        </li>
                        <li class="nav-item border-end ps-3 pe-3">
                            <a class="nav-link text-dark" asp-controller="Orders" asp-action="AddCarrier">Cadastrar Transportadora</a>
                        </li>
                        <li class="nav-item ps-3 border-end pe-3">
                            <a class="nav-link text-dark" asp-controller="Orders" asp-action="AddSeller">Cadastrar Vendedor</a>
                        </li>
                        <li class="nav-item ps-3 border-end pe-3">
                            <a class="nav-link text-dark" asp-controller="Orders" asp-action="AddProduct">Cadastrar Produtos</a>
                        </li>
                        <li class="nav-item ps-3 pe-3">
                            <a class="nav-link text-dark" asp-controller="Orders" asp-action="DashBoard">DashBoard</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            Tela de pedidos
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
